extend layout 

block content
    .container
        img(src="img/faq.png", alt="" height="20px" width="700px" style="display:block; margin-left: auto; margin-right: auto; margin-bottom: 40px  ")

        

    .faq-mockup
        h3 
            | FREQUENTLY ASKED 
            br
            | 
            span(style="color:#45A29E") QUESTIONS
            br
        .faq-collection 
            .faq-questions-area
                ul
                each data in faqData
                    li(id="faq-li") #{data.question}
                        button(class="dropdownButton") +
                    |
                    .dropdownContent.dropdown-content
                        p #{data.content}
                
            .faq-contact-area
                form(method="post" action="/send-contact-email").mt-2
                    h4 Can't find answers?
                    h4.mb-3 Send Us Your Query
                
                    .form-group.mb-3
                        label.form-label Name <sup>*</sup>
                        input.form-control(type="text" name="name" required)
                    .form-group.mb-3
                        label.form-label Email <sup>*</sup>
                        input.form-control(type="email" name="email" required)
                    
                    .mb-3 
                        label.form-label Message <sup>*</sup>
                        textarea.form-control(name="message" rows="6" placeholder="value" required)
                    .mb-5
                        button.float-center(type="submit" style="display:block; margin-left: auto; margin-right: auto; background: #45a29e; color: white; border-radius: 5px; padding: 10px ") Submit
