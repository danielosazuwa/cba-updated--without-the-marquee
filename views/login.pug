doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='')
    title CaseTrackr
    // Bootstrap core CSS
    link(href='/css/bootstrap.min.css' rel='stylesheet')
    meta(name='theme-color' content='#7952b3')
    style.
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

main.form-signin.text-center
    form(method="post" action="/admin/login")
        h1.h3.mb-3.fw-normal Please sign in
        .form-floating
            input#floatingInput.form-control(type='email' name="email" placeholder='name@example.com')
            label(for='floatingInput') Email address
        .form-floating
            input#floatingPassword.form-control(type='password' name="password" placeholder='Password')
            label(for='floatingPassword') Password
        .checkbox.mb-3
            label
                input(type='checkbox' value='remember-me')
                |  Remember me
        button.w-100.btn.btn-lg.btn-secondary(type='submit') Sign in
        p.mt-5.mb-3.text-muted &copy; 
            script.
                document.write(new Date().getFullYear());
